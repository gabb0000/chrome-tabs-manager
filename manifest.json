{
    "manifest_version": 3,
    "name": "Tab Session Manager",
    "version": "1.0.2",
    "description": "Salva e ripristina schede e gruppi di schede per riprenderle esattamente dove le hai lasciate",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}